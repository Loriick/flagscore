#!/bin/sh
# Pre-commit hook pour vérifier la qualité du code

echo "🔍 Running pre-commit checks..."

# Type check
echo "📝 Type checking..."
pnpm type-check
if [ $? -ne 0 ]; then
  echo "❌ Type check failed"
  exit 1
fi

# Lint
echo "🧹 Linting..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "❌ Lint failed"
  exit 1
fi

# Tests
echo "🧪 Running tests..."
pnpm test:run
if [ $? -ne 0 ]; then
  echo "❌ Tests failed"
  exit 1
fi

echo "✅ All pre-commit checks passed!"