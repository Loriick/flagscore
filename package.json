{
  "name": "flagscore-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web:dev": "turbo dev --filter=@flagscore/web",
    "web:build": "turbo build --filter=@flagscore/web",
    "deploy": "./scripts/deploy.sh",
    "vercel:build": "pnpm build --filter=@flagscore/web"
  },
  "devDependencies": {
    "turbo": "^2.5.8",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
